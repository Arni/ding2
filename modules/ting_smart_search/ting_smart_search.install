<?php

/**
 * @file
 * Handles installation/un-installation of smart search terms by the module.
 */

 /**
  * Implements hook_install().
  *
  * Creates some default entries on this module custom table.
  *
  * @see hook_install()
  */
 function ting_smart_search_install() {
   // Load the initial data from webtrekk.
   ting_smart_search_get_autodata_from_webtrekk();
 }

 /**
 * Implements hook_schema().
 */
function ting_smart_search_schema() {
  $schema['ting_smart_search_auto_data'] = array(
    'fields' => array(
      'id' => array(
        'description' => 'Normal field identifier',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'searchkey' => array(
        'description' => 'The keys',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'materialids' => array(
        'description' => 'Ids of the materials to boost',
        'type' => 'text',
        'size' => 'normal',
        'not null' => TRUE,
      ), 
    ),
    'primary key' => array(
      'id',
    ),
    'indexes' => array(
      'ting_smart_search_index' => array('searchkey'),
    ),
  );
  return $schema;
}